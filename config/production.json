{
  "host": "househunter.codaisseur.cloud",
  "port": 5000,
  "mongodb": "MONGODB_URL",
  "public": "../static/",
  "auth": {
    "token": {
      "secret": "FEATHERS_AUTH_SECRET"
    },
    "local": false,
    "shouldSetupSuccessRoute": true,
    "shouldSetupFailureRoute": true,
    "successRedirect": "/authenticate",
    "failureRedirect": "/auth/failure",
    "facebook": {
      "clientID": "CLIENT_ID",
      "clientSecret": "CLIENT_SECRET",
      "permissions": {
        "scope": ["public_profile","email"]
      }
    },
    "cookie": {
      "name": "house-hunter-cookie"
    }
  }
}
